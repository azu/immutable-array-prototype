{
  "private": true,
  "author": "azu",
  "license": "MIT",
  "name": "immutable-array-prototype",
  "version": "1.0.0",
  "description": "Immutable Array prototype methods.",
  "main": "lib/immutable-array-prototype.js",
  "scripts": {
    "test": "yarn run build && jest",
    "build": "lerna run build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "git config --local core.hooksPath .githooks",
    "versionup": "lerna version",
    "ci:versionup:patch": "lerna version patch --no-push --no-git-tag-version && npm run commit-version",
    "ci:versionup:minor": "lerna version minor --no-push --no-git-tag-version && npm run commit-version",
    "ci:versionup:major": "lerna version major --no-push --no-git-tag-version && npm run commit-version",
    "commit-version": "git add . && git commit -m \"chore(release): v`node -p 'require(\"./lerna.json\").version'`\"",
    "release": "lerna publish from-package",
    "ci:release": "lerna publish from-package --yes"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "jest": {
    "projects": [
      "packages/*"
    ],
    "testMatch": [
      "**/?(*.)(spec|test).ts?(x)"
    ]
  },
  "keywords": [
    "array",
    "immutable",
    "ecmascript",
    "ponyfill"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/immutable-array-prototype.git"
  },
  "bugs": {
    "url": "https://github.com/azu/immutable-array-prototype/issues"
  },
  "homepage": "https://github.com/azu/immutable-array-prototype",
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "jest": "^29.3.1",
    "lerna": "^6.4.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "none"
  }
}
